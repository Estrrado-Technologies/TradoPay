<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/detailItemRound"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/margin_5dp"
    android:paddingBottom="@dimen/margin_5dp">
     <androidx.cardview.widget.CardView
        android:layout_width="@dimen/card_detail_round"
        android:layout_height="@dimen/card_detail_round"
        android:id="@+id/cardDetail"
        app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         app:cardElevation="@dimen/margin_5dp"
         app:cardCornerRadius="@dimen/card_detail_round_radius"
         app:cardBackgroundColor="@color/white"
         android:layout_margin="@dimen/margin_2dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_login_bottom"
            android:scaleType="fitCenter" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        style="@style/text12sp_black"
        android:text="doctor"
       android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>