<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="@dimen/offercardImgHeight"
android:id="@+id/cardOffer"
android:elevation="8dp"
app:cardElevation="@dimen/margin_5dp"
app:cardCornerRadius="@dimen/margin_8dp"
    android:clipToPadding="true"
    app:contentPadding="@dimen/margin_7dp"
 android:layout_margin="@dimen/margin_7dp">
<androidx.constraintlayout.widget.ConstraintLayout
  android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/cardImg"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="@dimen/margin_8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/margin_4dp">
    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="@dimen/offercardHeight"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@drawable/restrnt"
      />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtRate"
        style="@style/text12sp_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_text"
        android:gravity="center"
        android:text="4.9"
        android:layout_margin="@dimen/margin_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_7dp"
        app:layout_constraintLeft_toRightOf="@+id/cardImg"
        android:layout_marginLeft="@dimen/margin_7dp">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text16sp_black_bold"
            android:text="Zam Zam YMR"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_7dp" />
        <TextView
            android:id="@+id/txtAdrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese, South Indian"
            style="@style/text12sp_black"
            app:layout_constraintTop_toBottomOf="@+id/txtName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin_5dp"/>
        <TextView
            android:id="@+id/txtdistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.2 kms"
            style="@style/text12sp_black"
            android:drawableStart="@drawable/ic_pin"
            android:textColor="@color/app_orange"
            app:layout_constraintTop_toBottomOf="@+id/txtAdrs"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin_5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>