<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
   android:paddingLeft="@dimen/margin_7dp"
    android:paddingRight="@dimen/margin_7dp"
    android:paddingTop="@dimen/margin_10dp"
    tools:context="com.estrrado.tradopay.ui.modules.home.HomeFragment">

    <TextView
        android:id="@+id/txtWelcome"
        style="@style/text12sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Vineetha"
        app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_7dp"/>
    <include android:id="@+id/lytBanner"
        layout="@layout/layout_home_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvHomeItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytBanner"
        android:orientation="vertical"
        tools:itemCount="5"
        android:scrollbars="none"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        tools:listitem="@layout/layout_home_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


</androidx.constraintlayout.widget.ConstraintLayout>